{% apply spaceless %}
    {% set selectElementId = elementId ?: 'select-iOtV1m' %}
    {% set selectElementPartId = elementPartId ?: 'select-part-XNh1St' %}
    {% set selectFormTextPartId = formTextPartId ?: 'select-part-text-hSNRfA' %}
    {% set selectErrorRequiredPartId = errorRequiredPartId ?: 'select-part-error-required-6sq4M6' %}
    {% set selectLabelText = (labelText ?: properties.selectLabelText) ?: bsi_cx_lorem(3) %}
    {% set selectOptionText = (optionText ?: properties.selectOptionText) ?: 'Bitte wählen' %} {# TODO: make translatable #}
    {% set selectInfoText = (infoText ?: properties.selectInfoText) ?: "" %}
    {% set selectErrorRequiredText = (errorRequiredText ?: properties.errorRequiredText) ?: 'Bitte füllen Sie dieses Feld aus.' %} {# TODO: make translatable #}

    <div x-data="selectField" data-bsi-element="{{ selectElementId }}" class="{{ 'bsi-element-' ~ selectElementId }} mb-4 bsi-form-element bsi-form-flex-label bsi-placeholder-not-defined" data-bsi-element-part="{{ selectElementPartId }}">
        <div class="bsi-form-input-element bsi-label-floating-element mb-3" role="alert" aria-live="polite">
            <div class="form-label-and-info-text">
                <label for="select" class="form-label">{{ selectLabelText }}</label>
                <div data-bsi-element-part="{{ selectFormTextPartId }}" class="form-text">{{ selectInfoText }}</div>
                <i class="bi bi-info-circle" data-bs-toggle="tooltip" data-bs-custom-class="bsi-tooltip" role="tooltip" aria-label="{{ selectInfoText }}"></i>
            </div>
            <select x-init="initSelectField" class="form-select" id="select">
                <option value="">{{ selectOptionText }}</option>
            </select>
            <div data-bsi-element-part="{{ selectErrorRequiredPartId }}" class="invalid-feedback"> {{ selectErrorRequiredText }} </div>
        </div>
    </div>
{% endapply %}